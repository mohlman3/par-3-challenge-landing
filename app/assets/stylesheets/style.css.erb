body > .container {
    width: 100%;
}

.header-row {
    background: url(<%= image_path 'golf-course-img.jpg' %>) no-repeat top left;
    background-size: cover;
    color: #FFFFFF;
    padding-top: 50px;
}

.header-row h1 {
    font-family:IowanOldStyleBT-BoldItalic;
    font-style: italic;
    font-size:40px;
    color:#FFFFFF;
    line-height:49px;
    text-align:center;
}

.header-row p {
    margin-top: 20px;
    font-family:AvenirNext-Medium;
    font-size:16px;
    color:rgba(255,255,255,0.95);
    letter-spacing:0.07px;
    line-height:26px;
    text-align:center;
}

.header-row .example-img {
    width: 79%;
}

.top-logo {
    width: 241px;
    height: 172px;
    margin-top: 50px;
}

.info-row, .form-row {
    padding-top: 75px;
    padding-bottom: 50px;
}

.accent {
    font-family:AvenirNext-Regular;
    font-size:14px;
    color:#919191;
    letter-spacing:0.06px;
    line-height:24px;
    text-align:left;
}

.info-row h2 {
    color:#919191;
    font-family:Avenir-Light;
    font-size:32px;
    line-height:44px;
}

.info-row-1 h2 {
    margin-top: 125px;
}

.info-row-2 h2 {
    margin-top: 50px;
}

.info-row-3 h2 {
    margin-top: 75px;
}

.info-row p {
    font-family:AvenirNext-Regular;
    font-size:16px;
    color:#444444;
    letter-spacing:0.07px;
    line-height:26px;
    text-align:left;
}

.info-row img {
}

.form-row {
    text-align:center;
    background:#2B91AC;
    padding-bottom: 75px;
    background: url(<%= image_path 'bottom-golf-course-img.jpg' %>) no-repeat top left;
    background-size: cover;
}

.form-row h2 {
    font-family: serif;
    font-style: italic;
    font-size:40px;
    color:#FFFFFF;
    line-height:49px;
}

.form-row p {
    font-family:AvenirNext-Medium;
    font-size:16px;
    color:rgba(255,255,255,0.95);
    letter-spacing:0.07px;
    line-height:26px;
    text-align:center;
    margin: 20px auto;
}

.form-row input {
    color: #FFFFFF;
}

.form-row label {
    color: #FFFFFF;
}

.form-row ::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color:rgba(255,255,255,0.5);
}
.form-row  :-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:rgba(255,255,255,0.5);
}
.form-row  ::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:rgba(255,255,255,0.5);
}
.form-row  :-ms-input-placeholder { /* Internet Explorer 10-11 */
    color:rgba(255,255,255,0.5);
}
.form-row  :placeholder-shown { /* Standard (https://drafts.csswg.org/selectors-4/#placeholder) */
    color:rgba(255,255,255,0.5);
}

.form-row input {
    width: 100%;
}

.form-row .alert-success {
    color: #000000;
}

.submit-button {
    background: #FF7C00;
    box-shadow: 0px 5px 12px 0px rgba(0,0,0,0.12);
    border-radius:4px;
    width:235px;
    height:60px;
    font-family:AvenirNext-DemiBold;
    font-size:13px;
    color:#FFFFFF;
    letter-spacing:4.06px;
    line-height:18px;
    text-align:center;
    margin-top: 25px;
}

.footer-row {
    background:#FAFAFA;
    padding-top: 35px;
}

.footer-row img {
    width:188px;
    height:13px;
    margin-top: 20px;
}

.footer-row address {
    font-family:AvenirNext-Medium;
    font-size:12px;
    color:#444444;
    letter-spacing:0.05px;
    line-height:18px;
}

.form-group.city-state {
    width: 50%;
}

/* Portrait */
@media screen and (max-width: 600px) {
    .example-img-1, .example-img-2, .example-img-3 {
        width: 75%;
    }

    .info-row {
        padding-top: 0;
    }

    .info-row h2 {
        margin-top: 40px;
    }
}